<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">

	<display-name>booking</display-name>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.booking.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CreateCustomer</servlet-name>
		<servlet-class>com.booking.servlet.CreateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateCustomer</servlet-name>
		<url-pattern>/create-customer</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Disconnection</servlet-name>
		<servlet-class>com.booking.servlet.DisconnectionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Disconnection</servlet-name>
		<url-pattern>/disconnection</url-pattern>
	</servlet-mapping>

	<error-page>
		<!-- Missing resource -->
		<error-code>404</error-code>
		<location>/login</location>
	</error-page>

	<servlet>
		<servlet-name>DisplayCustomers</servlet-name>
		<servlet-class>com.booking.servlet.DisplayCustomersServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DisplayCustomers</servlet-name>
		<url-pattern>/customers</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ActivateUser</servlet-name>
		<servlet-class>com.booking.servlet.ActivateUserServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ActivateUser</servlet-name>
		<url-pattern>/activate-user</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DisplayRooms</servlet-name>
		<servlet-class>com.booking.servlet.DisplayRoomsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DisplayRooms</servlet-name>
		<url-pattern>/rooms</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DisplayReservations</servlet-name>
		<servlet-class>com.booking.servlet.DisplayReservationsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DisplayReservations</servlet-name>
		<url-pattern>/reservations</url-pattern>
	</servlet-mapping>	
	
	<servlet>
		<servlet-name>DisplayStatistics</servlet-name>
		<servlet-class>com.booking.servlet.DisplayStatisticsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DisplayStatistics</servlet-name>
		<url-pattern>/statistics</url-pattern>
	</servlet-mapping>		

	<servlet>
		<servlet-name>DispCtmReservations</servlet-name>
		<servlet-class>com.booking.servlet.DispCtmReservationsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DispCtmReservations</servlet-name>
		<url-pattern>/customer-reservations</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>BookRoomP1</servlet-name>
		<servlet-class>com.booking.servlet.BookRoomP1Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookRoomP1</servlet-name>
		<url-pattern>/book-room</url-pattern>
	</servlet-mapping>
	
   <servlet>
		<servlet-name>BookRoomP2</servlet-name>
		<servlet-class>com.booking.servlet.BookRoomP2Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BookRoomP2</servlet-name>
		<url-pattern>/book-room-p2</url-pattern>
	</servlet-mapping>	

   <servlet>
		<servlet-name>CreateReservation</servlet-name>
		<servlet-class>com.booking.servlet.CreateReservationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateReservation</servlet-name>
		<url-pattern>/create-reservation</url-pattern>
	</servlet-mapping>	
</web-app>